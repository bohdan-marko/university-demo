@model IEnumerable<PIS.DAL.Models.Workplace>

@{
    ViewData["Title"] = "Available Workplaces";
}

<h1>Available Workplaces</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkplaceID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorkplaceID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkplaceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
